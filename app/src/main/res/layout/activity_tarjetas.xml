<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".TarjetasActivity">

    <!-- Botón para agregar tarjeta -->
    <Button
        android:id="@+id/btnAgregarTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Tarjeta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="32dp"/>

    <!-- Botón para ver tarjetas -->
    <Button
        android:id="@+id/btnVerTarjetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Tarjetas"
        app:layout_constraintTop_toBottomOf="@id/btnAgregarTarjeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="16dp"/>

    <!-- Botón para volver a la actividad anterior (ubicado en la parte inferior) -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>


